@model PhotoBattles.App.Models.ViewModels.ContestViewModel

@{
    ViewBag.Title = "Winners";
}

<h2>@ViewBag.Title</h2>
<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h3>@Model.Title</h3>
    </div>
    <div class="panel-body text-center">
        <h4>@Model.Description</h4>
        <p>Winners:</p>

        @foreach (var winner in Model.Winners)
        {
            <h3>@winner.UserName</h3>
        }
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <h5><span style="color: #337ab7">@Model.Organizer.UserName</span> created this on @Model.CreatedOn</h5>
                </div>
                <div class="col-lg-6 text-right">
                    @Html.ActionLink("Details", "Details", "Contests", new { area = string.Empty, id = Model.Id }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</div>
