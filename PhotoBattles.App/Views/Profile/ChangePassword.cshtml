@model PhotoBattles.App.Models.ProfileViewModel

@using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-lg-12">
            @Html.PasswordFor(m => m.ChangePasswordViewModel.OldPassword, new { @class = "form-control", placeholder = "Old Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            @Html.PasswordFor(m => m.ChangePasswordViewModel.NewPassword, new { @class = "form-control", placeholder = "New Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            @Html.PasswordFor(m => m.ChangePasswordViewModel.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            <input type="submit" value="Change password" class="btn btn-default btn-block"/>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}