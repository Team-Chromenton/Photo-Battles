@model PhotoBattles.App.Models.ProfileViewModel

@using (Html.BeginForm("EditProfile", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-lg-12">
            @Html.TextBoxFor(m => m.EditProfileViewModel.Email, new { @class = "form-control", placeholder = "Email", value = Model.EditProfileViewModel.Email })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            @Html.TextBoxFor(m => m.EditProfileViewModel.FirstName, new { @class = "form-control", placeholder = "First Name" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            @Html.TextBoxFor(m => m.EditProfileViewModel.LastName, new { @class = "form-control", placeholder = "Last Name" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            <input type="submit" value="Edit profile" class="btn btn-default btn-block"/>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}