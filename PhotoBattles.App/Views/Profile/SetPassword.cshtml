@model PhotoBattles.App.Models.ProfileViewModel

@using (Html.BeginForm("SetPassword", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-lg-12">
            @Html.PasswordFor(m => m.SetPasswordViewModel.NewPassword, new { @class = "form-control", placeholder = "New Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            @Html.PasswordFor(m => m.SetPasswordViewModel.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12">
            <input type="submit" value="Set password" class="btn btn-default btn-block"/>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}