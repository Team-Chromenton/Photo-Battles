@model PhotoBattles.App.Models.ViewModels.UserViewModel

<div class="row">
    <div class="col-lg-4 col-lg-offset-4">
        @using (Html.BeginForm("EditUser", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <input type="submit" value="Edit user" class="btn btn-default btn-block"/>
                </div>
            </div>
        }
    </div>
</div>

